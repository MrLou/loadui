<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
		
	<!--<bean id="httpClient" class="org.eclipse.jetty.client.HttpClient" init-method="start" destroy-method="stop" />
	-->
	<bean id="httpClient" class="com.eviware.loadui.http.HttpClientFactory" factory-method="createHttpsClient" destroy-method="stop" />
	
	<bean id="messageEndpointProvider" class="com.eviware.loadui.impl.messaging.BayeuxMessageEndpointProvider">
		<constructor-arg ref="httpClient" />
	</bean>
	
	<bean id="validatorHttpsClient" class="com.eviware.loadui.http.HttpClientFactory" factory-method="createHttpsClient" destroy-method="stop" />
	<bean id="validatorHttpClient" class="com.eviware.loadui.http.HttpClientFactory" factory-method="createHttpClient" destroy-method="stop" />
	
	<bean id="httpClientProvider" class="com.eviware.loadui.impl.http.HttpClientProviderImpl">
		<constructor-arg ref="validatorHttpsClient" />
		<constructor-arg ref="validatorHttpClient" />
	</bean>
	
</beans>