<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="counterSynchronizer" class="com.eviware.loadui.impl.agent.AgentCounterSynchronizer" />
	
	<!--<bean id="trackStreamer" class="com.eviware.loadui.impl.statistics.TrackStreamer"
		destroy-method="release">
		<constructor-arg ref="scheduledExecutorService" />
		<constructor-arg ref="executionManager" />
	</bean>-->
	
	<bean id="statisticsAggregator" class="com.eviware.loadui.impl.statistics.StreamingStatisticsAggregator">
		<constructor-arg ref="broadcastMessageEndpoint" />
	</bean>
	
	<bean id="lifecycleScheduler" class="com.eviware.loadui.impl.lifecycle.AgentLifecycleScheduler" destroy-method="release">
		<constructor-arg ref="broadcastMessageEndpoint" />
		<constructor-arg ref="executorService" />
	</bean>

	<bean id="controller" class="com.eviware.loadui.impl.agent.ControllerImpl">
		<constructor-arg ref="scheduledExecutorService" />
		<constructor-arg ref="executorManager" />
		<constructor-arg ref="conversionService" />
		<constructor-arg ref="serverEndpoint" />
		<constructor-arg ref="terminalProxy" />
		<constructor-arg ref="addressableRegistry" />
		<constructor-arg ref="propertySynchronizer" />
		<constructor-arg ref="counterSynchronizer" />
		<constructor-arg ref="broadcastMessageEndpoint" />
	</bean>

	<!--<bean id="runnerServer" class="com.eviware.loadui.impl.agent.RunnerServer"> 
