<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<fx:root type="javafx.scene.layout.StackPane" xmlns:fx="http://javafx.com/fxml" styleClass="assignment-view">
	<stylesheets>
		<URL value="@AssignmentView.css" />
	</stylesheets>
	<BorderPane fx:id="container">
		<right>
			<MenuButton fx:id="menuButton" id="menuButton" >
				<items>
					<MenuItem id="open" text="Open" onAction="#openScenario" />
					<MenuItem id="delete" text="Delete" onAction="#delete" />
				</items>
			</MenuButton>
		</right>
	</BorderPane>

</fx:root>