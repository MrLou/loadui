<fx:root type="javafx.scene.layout.Pane" styleClass="project-settings-dialog" xmlns:fx="http://javafx.com/fxml">
	<stylesheets>
		<URL value="@ProjectSettingsDialog.css" />
	</stylesheets>
	<TabPane tabClosingPolicy="unavailable" minHeight="320" minWidth="500">
		<Tab text="Execution">
			<CheckBox fx:id="abortOngoingOnFinish" text="Abort ongoing requests on finish" />
		</Tab>
		<Tab text="Reports">
			<VBox spacing="10">
				<CheckBox fx:id="enableBrowseForReportFile" text="Export summary reports to file system" onAction="#enableBrowseForReportFile"/>
				<HBox spacing="10">
					<TextField fx:id="browseForReportFileField" disable="true"/>
					<Button fx:id="browseForReportFileButton" text="Browse..." onAction="#browseForReportFile" disable="true"/>
				</HBox>
			</VBox>
		</Tab>
		<Tab text="Misc">
			<VBox spacing="10">
				<CheckBox fx:id="ignoreInvalidCanvas" text="Do not warn when starting a Canvas without both a Generator and a Runner" />
			</VBox>
		</Tab>
	</TabPane>
</fx:root>