<StackPane xmlns:fx="http://javafx.com/fxml" styleClass="workspace-view"
	fx:controller="com.eviware.loadui.ui.fx.views.workspace.WorkspaceView$Controller">
	<stylesheets>
		<URL value="@WorkspaceView.css" />
	</stylesheets>
	<VBox alignment="top_left" spacing="10" snapToPixel="true">
		<ToolBar>
			<MenuButton fx:id="workspaceButton">
				<items>
					<MenuItem onAction="#exit" text="Exit" />
				</items>
			</MenuButton>
		</ToolBar>
		<HBox spacing="15" snapToPixel="true">
			<ToolBox>
				<categoryComparator>
					<ExplicitOrdering>
						<String fx:value="Projects"/>
						<String fx:value="Agents"/>
					</ExplicitOrdering>
				</categoryComparator>
				<NewProjectIcon id="newProjectIcon" ToolBox.category="Projects" />
				<NewAgentIcon id="newAgentIcon" ToolBox.category="Agents" />
			</ToolBox>
			<VBox spacing="15">
				<Carousel fx:id="projectRefCarousel" prefWidth="320" prefHeight="220" />
				<Carousel fx:id="agentCarousel" prefWidth="320" prefHeight="220" />
			</VBox>
			<WebView fx:id="webView" prefWidth="634" prefHeight="562" />
		</HBox>
	</VBox>
</StackPane>