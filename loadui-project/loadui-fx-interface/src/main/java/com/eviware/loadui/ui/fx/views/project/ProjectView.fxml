<?xml version="1.0" encoding="UTF-8"?>

<?import com.eviware.loadui.ui.fx.control.DetachableTab?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<fx:root type="javafx.scene.layout.StackPane" styleClass="project-view" xmlns:fx="http://javafx.com/fxml">
	<stylesheets>
		<URL value="@ProjectView.css" />
	</stylesheets>
	<VBox spacing="10" fillWidth="true">
		<HBox spacing="10">
			<Label fx:id="workspaceLabel" text="Workspace" />
		</HBox>
		<StackPane VBox.vgrow="always">
			<TabPane tabClosingPolicy="unavailable">
				<DetachableTab fx:id="designTab" text="Design" />
				<DetachableTab fx:id="resultTab" text="Results" />
			</TabPane>
			<Label fx:id="projectLabel" text="Project" StackPane.alignment="top_left" />
			<Button fx:id="closeProjectButton" text="Close" onAction="#close" StackPane.alignment="top_right" />
		</StackPane>
	</VBox>
</fx:root>