<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>

<fx:root type="javafx.scene.layout.StackPane" xmlns:fx="http://javafx.com/fxml"
	styleClass="slim-icon">
	<AnchorPane styleClass="line-segment-view">
		<Rectangle fx:id="legendColorRectangle"
			AnchorPane.leftAnchor="9" AnchorPane.topAnchor="9"
			AnchorPane.bottomAnchor="9" height="9" width="9" />
		<Label fx:id="segmentLabel" AnchorPane.leftAnchor="27"
			AnchorPane.topAnchor="6" text="Label" />
		<HBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" spacing="4" >
			<Separator orientation="vertical" />
			<MenuButton fx:id="menuButton" minWidth="${segmentLabel.width+40}" minHeight="27" />
		</HBox>

	</AnchorPane>
</fx:root>
