<project name="MyProject" basedir=".">
    <description>
        Ant tasks for use with Luntbuild
    </description>

	<target name="copy">
		<delete dir="${destination}" />
		<copy todir="${destination}">
			<fileset dir="${source}" />
		</copy>
	</target>
	
	<target name="ftp">
		<ftp server="${server}" port="${port}" userid="${userid}" password="${password}" remotedir="${destination}">
			<fileset dir="${source}" />
		</ftp>
	</target>
</project>