<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>loadui-project</artifactId>
		<groupId>com.eviware.loadui</groupId>
		<version>1.5.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>loadui-runner-base</artifactId>
	<packaging>bundle</packaging>
	<name>loadUI Runner Base</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>${mavenBundlePluginVersion}</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Export-Package>com.eviware.loadui.api*</Export-Package>
						<Import-Package>*;com.eviware.loadui.api.agent;com.eviware.loadui.api.chart;com.eviware.loadui.api.component.categories;com.eviware.loadui.api.discovery;com.eviware.loadui.api.layout;com.eviware.loadui.api.observer;com.eviware.loadui.api.serialization;com.eviware.loadui.api.statistics.model;com.eviware.loadui.api.statistics.model.chart;com.eviware.loadui.api.summary;com.eviware.loadui.api.ui;com.eviware.loadui.api.ui.charts;com.eviware.loadui.api.ui.charts.tools;com.eviware.loadui.api.ui.inspector;com.eviware.loadui.api.ui.table;com.eviware.loadui.api.upload;</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.eviware.loadui</groupId>
			<artifactId>loadui-api</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.eviware.loadui</groupId>
			<artifactId>loadui-util</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
	</dependencies>
</project>